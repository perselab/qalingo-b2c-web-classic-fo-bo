        <footer>
            <div class="container footer-container">
        		<div class="row footer-content">
					<div class="span3">
						<span class="footer-nav-title">$wording.get("fo.footer_menu.customer_care")</span>
						<div class="clear border-btm"></div>
						<ul class="footer-nav">
							#foreach($footerMenu in $footerMenus)
								#if($footerMenu.type == 'MENU_TYPE_CUSTOMER_CARE')
								<li><a href="$footerMenu.url" alt="$footerMenu.name">$footerMenu.name</a></li>
								#end
							#end
						</ul>
					</div>
					
					<div class="span3">
						<span class="footer-nav-title">$wording.get("fo.footer_menu.products")</span>
						<div class="clear border-btm"></div>
						<ul class="footer-nav">
							#foreach($catalogCategory in $catalogCategories)
							<li><a href="$catalogCategory.productAxeUrl">$catalogCategory.name</a></li>
							#end
						</ul>
					</div>
					
					<div class="span3">
						<span class="footer-nav-title">$wording.get("fo.footer_menu.our_company")</span>
						<div class="clear border-btm"></div>
						<ul class="footer-nav">
						#foreach($footerMenu in $footerMenus)
							#if($footerMenu.type == 'MENU_TYPE_OUR_COMPANY')
							<li><a href="$footerMenu.url" alt="$footerMenu.name">$footerMenu.name</a></li>
							#end
						#end
						</ul>
					</div>
					
					<div class="span3">
						<span class="footer-nav-title">$wording.get("fo.footer_menu.contact_us")</span>
						<div class="clear border-btm"></div>
						<ul class="footer-nav">
							<li>Phone: +84 123456789</li>
							<li>Fax: +84 123456789</li>
							<li>Email: contact@yourdomain.com</li>
						</ul>
						<span class="footer-nav-title footer-social-title">$wording.get("fo.footer_menu.follow_us")</span>
						<ul class="footer-social-list">
							<li><a href="http://www.facebook.com" class="ql-social-icons facebook" target="_blank">&nbsp;</a></li>
							<li><a href="http://www.twitter.com" class="ql-social-icons twitter" target="_blank">&nbsp;</a></li>
						</ul>
					</div>
					
					<div class="span9">
						<span class="footer-nav-title">
							$wording.get("fo.footer_menu.payment_methods")&nbsp;
							<img class="payment-img" src="${common.themeResourcePrefixPath}/img/payment/american-express.jpg" alt="American Express">&nbsp;
							<img class="payment-img" src="${common.themeResourcePrefixPath}/img/payment/common-card.jpg" alt="CB">&nbsp;
							<img class="payment-img" src="${common.themeResourcePrefixPath}/img/payment/visa.jpg" alt="Visa">&nbsp;
							<img class="payment-img" src="${common.themeResourcePrefixPath}/img/payment/mastercard.jpg" alt="Master Card">
						</span>
					</div>					
        		</div>
				
				<div class="row">					
                    <div class="span12">
						<div class="pull-left">
							$legalTerms.copyright
						</div>
						<div class="pull-right">
						#foreach($footerMenu in $footerMenus)
							<a href="$footerMenu.url" alt="$footerMenu.name">$footerMenu.name</a>
							#if(!$foreach.last)
							- 
							#end
						#end
						</div>
						<div class="pull-right" style="clear: both;">
							<img src="${common.themeResourcePrefixPath}/img/footer-ico.png" width="40px" height="40px" />
						</div>
                    </div>
        		</div>
        	</div>
        </footer>
